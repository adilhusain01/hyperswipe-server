# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Server Configuration
HOST=127.0.0.1
PORT=8081
RELOAD=true

# CORS Settings (for frontend integration)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Security
RATE_LIMIT_PER_MINUTE=100
API_KEY_HEADER=X-API-Key

# Hyperliquid Configuration
HYPERLIQUID_TESTNET=true
HYPERLIQUID_BASE_URL=https://api.hyperliquid-testnet.xyz

# WebSocket Configuration (handled automatically)
# The server automatically connects to wss://api.hyperliquid-testnet.xyz/ws
# for real-time price feeds and user data
